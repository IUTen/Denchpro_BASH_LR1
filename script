#!/bin/bash

path=$1 #записываем в переменную path первый введенный пользователем параметр
type=$2 #записываем в переменную type второй введенный пользователем параметр

cd $1 #переходим по пути, который был введен пользователем(первый параметр)

for file in * #проходимся по всем файлам, которыые есть по данному пути
do #запуск выполнения цикла
if [[ $(head -c 1 $file) =~ ^[0-9]+$ ]]; then #условие проверки первого символа файла на то, является ли он цифрой
	mv "$file" "$file"."$type" #переименование файла(добавление ему нового расширения или параметра 2, который был введен пользователем)
fi
done #конец выполнения цикла
